@page "{id:guid}"
@model UKG.HCM.UI.Pages.People.DeleteModel
@{
    ViewData["Title"] = "Delete Person";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Person</h3>
                </div>
                <div class="card-body">
                    <h4 class="mb-3">Are you sure you want to delete this person?</h4>
                    
                    @if (Model.Person != null)
                    {
                        <div class="alert alert-warning">
                            <strong>Warning:</strong> This action cannot be undone.
                        </div>
                        
                        <dl class="row">
                            <dt class="col-sm-3">Full Name:</dt>
                            <dd class="col-sm-9">@Model.Person.FullName</dd>
                            
                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9">@Model.Person.Email</dd>
                            
                            <dt class="col-sm-3">Role:</dt>
                            <dd class="col-sm-9">@Model.Person.Role</dd>
                        </dl>
                        
                        <form method="post">
                            <div class="d-flex justify-content-between mt-4">
                                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <p>Person not found.</p>
                        </div>
                        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
