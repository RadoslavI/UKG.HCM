@page
@model UKG.HCM.UI.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center mb-0">Change Password</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">@Model.SuccessMessage</div>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    
                    <div class="mb-3">
                        <label asp-for="PasswordRequest.CurrentPassword" class="form-label"></label>
                        <input asp-for="PasswordRequest.CurrentPassword" class="form-control" type="password" />
                        <span asp-validation-for="PasswordRequest.CurrentPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PasswordRequest.NewPassword" class="form-label"></label>
                        <input asp-for="PasswordRequest.NewPassword" class="form-control" type="password" />
                        <span asp-validation-for="PasswordRequest.NewPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PasswordRequest.ConfirmPassword" class="form-label"></label>
                        <input asp-for="PasswordRequest.ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="PasswordRequest.ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}