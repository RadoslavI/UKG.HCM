@page
@model UKG.HCM.UI.Pages.Auth.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="text-center">
    <h1>Logging out...</h1>
    <p>Please wait while we log you out of the system.</p>
</div>
<div class="text-center">
    <h1 class="display-4">Logged Out</h1>
    <p>You have been successfully logged out.</p>
    <a asp-page="/Auth/Login" class="btn btn-primary">Log in again</a>
</div>