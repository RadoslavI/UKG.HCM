@page
@model UKG.HCM.UI.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="text-center mb-0">Login</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    
                    <div class="mb-3">
                        <label asp-for="LoginRequest.Email" class="form-label">Email</label>
                        <input asp-for="LoginRequest.Email" class="form-control" type="email" placeholder="name@example.com" />
                        <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="LoginRequest.Password" class="form-label">Password</label>
                        <input asp-for="LoginRequest.Password" class="form-control" type="password" />
                        <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
